<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grabberApp.javafx.fxmls.popups.download.ControllerDownload">
   <children>
      <VBox fx:id="vbComponents" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <Label text="URL" />
                        <TextField fx:id="txfUrl" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <Label text="Nombre" />
                        <TextField fx:id="txfVideoName" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
                  <Button mnemonicParsing="false" onAction="#handleAceptar" text="Aceptar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
