<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grabberApp.javafx.fxmls.popups.library.ControllerLibrarySelect">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fillHeight="false" spacing="30.0">
               <children>
                  <Button fx:id="btnBack" mnemonicParsing="false" text="Atras" visible="false" />
                  <VBox HBox.hgrow="ALWAYS" />
                  <TextField fx:id="txfSearchBar" />
                  <ImageView fx:id="imgSearch" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <GridPane fx:id="gvLibraries">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                     <styleClass>
                        <String fx:value="topBar" />
                        <String fx:value="slightRadius" />
                     </styleClass>
                  </GridPane>
                  <VBox alignment="BOTTOM_CENTER" spacing="30.0">
                     <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                     </padding>
                     <children>
                        <Button fx:id="btnListChildren" mnemonicParsing="false" text="Ver hijos" />
                        <Button fx:id="btnSelectThis" mnemonicParsing="false" text="Seleccionar" />
                        <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancelar" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
